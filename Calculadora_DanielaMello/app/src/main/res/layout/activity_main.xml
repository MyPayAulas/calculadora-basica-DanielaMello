<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/calculo"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginEnd="10dp"
        android:ellipsize="start"
        android:gravity="end"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/legenda"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginEnd="10dp"
        android:ellipsize="end"
        android:gravity="left"
        android:text="Total:"
        android:maxLines="1"
        android:textColor="@color/gray"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/txtresultado"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginEnd="10dp"
        android:ellipsize="end"
        android:gravity="end"
        android:maxLines="1"
        android:textColor="@color/black"
        android:textSize="35sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/limpar"
            style="@style/Operadores_Buttom"
            android:text="C"/>

        <TextView
            android:id="@+id/parenteses"
            style="@style/Operadores_Buttom"
            android:text="( )"/>

        <TextView
            android:id="@+id/porcentagem"
            style="@style/Operadores_Buttom"
            android:text="%"/>

        <TextView
            android:id="@+id/divisao"
            style="@style/Operadores_Buttom"
            android:text="/"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <TextView
            android:id="@+id/numero_sete"
            style="@style/Numeros_Button"
            android:text="7"/>

        <TextView
            android:id="@+id/numero_oito"
            style="@style/Numeros_Button"
            android:text="8"/>

        <TextView
            android:id="@+id/numero_nove"
            style="@style/Numeros_Button"
            android:text="9"/>

        <TextView
            android:id="@+id/multiplicacao"
            style="@style/Operadores_Buttom"
            android:text="x"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <TextView
            android:id="@+id/numero_quatro"
            style="@style/Numeros_Button"
            android:text="4"/>

        <TextView
            android:id="@+id/numero_cinco"
            style="@style/Numeros_Button"
            android:text="5"/>

        <TextView
            android:id="@+id/numero_seis"
            style="@style/Numeros_Button"
            android:text="6"/>

        <TextView
            android:id="@+id/subtracao"
            style="@style/Operadores_Buttom"
            android:text="-"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <TextView
            android:id="@+id/numero_um"
            style="@style/Numeros_Button"
            android:text="1"/>

        <TextView
            android:id="@+id/numero_dois"
            style="@style/Numeros_Button"
            android:text="2"/>

        <TextView
            android:id="@+id/numero_tres"
            style="@style/Numeros_Button"
            android:text="3"/>

        <TextView
            android:id="@+id/soma"
            style="@style/Operadores_Buttom"
            android:text="+"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <TextView
            android:id="@+id/numero_ponto"
            style="@style/Numeros_Button"
            android:text="."/>

        <TextView
            android:id="@+id/numero_zero"
            style="@style/Numeros_Button"
            android:text="0"/>

        <ImageView
            android:id="@+id/numero_apagar"
            style="@style/Numeros_Button"
            android:src="@drawable/backspace"
            android:scaleType="center"/>

        <TextView
            android:id="@+id/igual"
            style="@style/Igual_Button"
            android:text="="/>

    </LinearLayout>
</LinearLayout>

